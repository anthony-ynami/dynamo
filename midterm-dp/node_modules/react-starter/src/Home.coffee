React = require 'react'

module.exports = React.createClass

  getInitialState: ->
    init: false

  componentDidMount: ->
    @setState init: true

  handleClick: ->
    alert 'Hello world!'

  render: ->
    `<div className={"container " + (this.state.init ? 'fadeIn' : '')}>
      <h1 onClick={this.handleClick}>Hello world!</h1>
      <h2>Check it out on <a href="https://github.com/svagi/ReactStarter">GitHub</a>.</h2>
     </div>`