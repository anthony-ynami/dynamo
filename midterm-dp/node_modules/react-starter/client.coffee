React = require 'react'
Home = require './src/Home.coffee'
ReactMount = require 'react/lib/ReactMount'
ReactMount.allowFullPageRender = true

{html, head, link, title, meta, script, body} = React.DOM

Client = React.createClass
  render: ->
    html null,
      head null,
        title(null, "Client-Server JavaScript Rendering"),
        meta(name: "viewport", content: "width=device-width, initial-scale=1.0, user-scalable=no"),
        link(rel: "stylesheet", type: "text/css", href: "/bootstrap.min.css"),
        link(rel: "stylesheet", type: "text/css", href: "/style.css"),
        script(src: "bundle.js", async: true),
        body className: "App", Home()
# TODO routing

# Client side rendering
if window?
  window.onload = ->
    React.renderComponent(Client(), document)

module.exports = Client




